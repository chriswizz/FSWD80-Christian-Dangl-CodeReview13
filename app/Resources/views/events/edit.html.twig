{% extends 'base.html.twig' %}

{% block body %}

    <div class="single-item">
        <h1>Edit event</h1>
        {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <input class="btn btn-outline-success btn-lg my-2" type="submit" value="Edit" />
        {{ form_end(edit_form) }}

        {{ form_start(delete_form) }}
            <input class="btn btn-outline-danger btn-lg my-2" role="button" type="submit" value="Delete">
        {{ form_end(delete_form) }}

        <a class="btn btn-outline-secondary btn-lg my-2" href="{{ path('events_index') }}">Back to the list</a>
    </div>


{% endblock %}
